<textarea></textarea>

@section Scripts {
    <script src="~/js/tinymce6/tinymce.min.js" type="text/javascript"></script>

    <script type="text/javascript">
        tinymce.init({
            selector: "textarea",
            plugins: [
                'advlist', 'autolink', 'lists', 'link', 'image', 'charmap', 'preview',
                'anchor', 'searchreplace', 'visualblocks', 'code', 'fullscreen',
                'insertdatetime', 'media', 'table', 'help', 'wordcount', 'responsivefilemanager'
            ],
            toolbar: 'undo redo | blocks | ' +
                'bold italic forecolor | alignleft aligncenter ' +
                'alignright alignjustify | bullist numlist outdent indent | link image responsivefilemanager | ' +
                'removeformat | help',
            width: '100%',
            height: 400,
            min_height: 400,
            max_height: 800,
            image_advtab: true,
            image_dimensions: false,
            allow_script_urls: true,
            allow_events: true,
            external_filemanager_path: "/filemanager/",
            external_plugins: { "responsivefilemanager": "/filemanager/plugin.min.js" },
            filemanager_title: "Responsive File Manager",
            valid_elements: '+*[*]',
            extended_valid_elements: '+*[*]',
            valid_children: "+body[style]"
        });
    </script>
}